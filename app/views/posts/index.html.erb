<% if @current_user %>
<div class="row">
    <% for post in @posts %>
        <div class="col-md-6 col-lg-3">
            
                <h4><%= post["title"] %></h4>
                <p><%= post["posted_on"] %></p>
                <p><%= post["description"] %></p>
            
        </div>
    <% end %>
</div>
<% end %>