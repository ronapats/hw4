<% if @current_user %>
<div class="row">
    <% for post in @posts %>
        <div class="col-md-6 col-lg-3">
            
                <h4><%= post["title"] %></h4>
                <p><%= post["posted_on"] %></p>
                <p><%= post["description"] %></p>
                <%if post.uploaded_image.attached?%>
                    <img src="<%= url_for(post.uploaded_image) %>" alt="" class="img-fluid">
                <%else%>
                    <img src="<%= post["image"] %>" class="img-fluid">
                <% end %>   
                
        </div>
    <% end %>
</div>
<% end %>